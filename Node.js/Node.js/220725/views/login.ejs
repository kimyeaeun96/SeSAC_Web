<html>
    <head>
        <title>sign up</title>
        <style>
            div {
                text-align: center;
            }
            .empty {
                height: 30%;
            }
            p {
                margin: 0px;
                margin-right: 100px;
                font-size: 10px;
                font-style: normal;
                font-weight: bold;
            }
            input {
                width: 150px;
                height: 20px;
            }
            input:focus {
                outline: 0;
            }
            .box {

            }
            .span_1 {
                margin-left: 500px;
            }
            .btn {
                width: 80px;
                height: 20px;
                background-color: rgba(210, 1, 1, 0.64);
                font-size: xx-small;
                font-weight: bold;
                font-style: italic;
                text-align: center;
                border: none;
                border-radius: 50px;
                padding: 0;
            }
            .btn:hover {
                background-color: darkolivegreen;
            }

        </style>
    </head>
    <body>
        <div class="box">
            <form action="receive" method="POST">
                <div class="empty"></div>
                    <div style="font-size: 20px; font-weight: lighter">
                        회원가입
                    </div>
                    <div style="height: 20px;"></div>
                    <div>
                        <p>ID<span class="span_1" style="margin-left: 35px;"></span></p>
                        <input type="text" name="id">
                    </div>
                    <div>
                        <p>PW<span class="span_1" style="margin-left: 30px;"></span></p>
                        <input type="password" name="pw">
                    </div>
                    <div>
                        <p>Name<span class="span_1" style="margin-left: 20px;"></span></p>
                        <input type="text" name="name">
                    </div>

                    <div style="margin-top: 10px; margin-bottom: 20px;"></div>
                    <button type="submit" class="btn">sign up!</button>    
            </form>
        </div>
    </body>
</html>